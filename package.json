{
  "name": "cakeresume-html-editor",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prettier:check": "prettier --check './**/*.{js,json,css}' && echo \"âœ… Prettier validated\"",
    "prettier:write": "prettier --write './**/*.{js,json,css}'",
    "lint": "eslint './**/*.js'",
    "lint:fix": "eslint './**/*.js' --fix"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "2.0.5"
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "npm run prettier:check"
    ],
    "*.js": [
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
